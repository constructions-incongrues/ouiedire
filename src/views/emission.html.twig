			{% set primary = '512641' %}
			{% set contrast = '777777' %}
		{% elseif show.typeSlug == 'bureau' -%}
			{% set primary = '173A51' %}
			{% set contrast = '777777' %}
		{% elseif show.typeSlug == 'ailleurs' -%}
			{% set primary = '111111' %}
			{% set contrast = '666666' %}
		{% elseif show.typeSlug == 'ouiedire' -%}
			{% set primary = '39254B' %}
			{% set contrast = '777777' %}
		{% endif %}		
	{% else %}
		{%- if show.typeSlug == 'bagage' -%}
			{% set primary = 'FC029C' %}
			{% set contrast = 'FFFFFF' %}
		{% elseif show.typeSlug == 'bureau' -%}
			{% set primary = '0099FF' %}
			{% set contrast = 'FFFFFF' %}
		{% elseif show.typeSlug == 'ailleurs' -%}
			{% set primary = '333333' %}
			{% set contrast = 'FFFFFF' %}
		{% elseif show.typeSlug == 'ouiedire' -%}
			{% set primary = '8A2BE2' %}
			{% set contrast = 'FFFFFF' %}
		{% endif %}
	{% endif %}
	
	a.mejs-smartplaylist-time:hover {
		color: #{{ contrast }};
		background-color:#{{ primary }};
	}
	a.mejs-smartplaylist-time.mejs-smartplaylist-current{
		color: #{{ contrast }};
		background-color:#{{ primary }};
		font-weight: bold;
	}
	.mejs-controls .mejs-time-rail .mejs-time-current {
		background-color:#{{ primary }};
	}
	.mejs-controls .mejs-time-rail .mejs-time-float {		
		color:#{{ contrast }};
		background-color:#{{ primary }};
	}
	.mejs-controls .mejs-horizontal-volume-slider .mejs-horizontal-volume-current{				
		background-color:#{{ primary }};
	}

	</style>
{% endblock %}